{
  "pluginAlias": "VDP Template",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name:",
        "type": "string",
        "required": true,
        "default": "VDP Template Dynamic Platform"
      }, 
      "configPath": {
        "title": "Config Path:",
        "type": "string",
        "required": true,
        "default": "/var/lib/homebridge/config.json"
      }, 
      "devices": {
          "type": "array",
          "items": {
              "title": "Accessory",
              "type": "object",
              "properties": {
                  "name" : {
                    "title" : "Name",
                    "type" : "string",
                    "required" : true
                  },
                  "uuid" : {
                    "title" : "UUID",
                    "type" : "string",
                    "readonly" : true,
                    "default": ""
                  }
              }
          }
      }
    }
  }
}